<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="BlueAppTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/TwitterBlue</item>

        <!--    For backwards compatibility    -->
        <item name="background">@color/TwitterBlue</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>

        <!--    For backwards compatibility    -->
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <!--  Compose Tweet Styles for character count  -->
    <style name="counterText">
        <item name="android:textColor">#aa5353cc</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>
</resources>
